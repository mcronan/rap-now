.row
	.col-sm-12
		.spacer
.row
	.col-sm-offset-4.col-sm-3
		.fb-share-button(data-layout='button' ng-show="showButton")
		#fb-root
.row
	.col-sm-2
		section(ng-app='rapApp', ng-controller='rapController')
			addbuttonsbutton
			#space-for-buttons
			{{rap.raps}}

.row
	.p1Text.col-sm-offset-1.col-sm-2
		//- .rap(ng-repeat="rap in newArray track by $index")
		p You have one minute! Lay down your rap in the box to the right!
	.col-sm-offset-1.col-sm-3
		#time(ng-show="showinput") {{timeInS | date:"ss:sss"}}
.row
	.p1Rap.col-sm-offset-1.col-sm-3
			//- .rap(ng-repeat="rap in newArray track by $index")
			div{{newArray[0]}}
	.input-rap.col-sm-offset-3.col-sm-3
		form(ng-submit="addRap()" ng-show="showinput")
																	//- pasting has been disabled, no cheaters!
			input(placeholder="Get going!" id="rapBox" ng-model="newRap.rap" ng-paste="$event.preventDefault()" ng-show="showinput")
		input(type="submit" value="Lay it down!" id="submitter" ng-show="showinput") 
	.output-rap.col-sm-offset-3.col-sm-3
		#finishedRap(ng-show="showoutput")

.footer-2
	.row
		.col-sm-12.spacer-3
	.row
		.col-sm-offset-3.col-sm-8
			.col-sm-offset-1.col-sm-4
				p Made by Ronan Mc Guire 
			.col-sm-2
				a(href="https://github.com/mcronan") GitHub	
